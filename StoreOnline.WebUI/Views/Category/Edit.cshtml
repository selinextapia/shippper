@model StoreOnline.WebUI.Models.Category

@{
    ViewData["Title"] = "Edit";
}


<h4>Edit Student</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="CategoryId" class="form-control" />

            <div class="form-group">
                <label asp-for="CategoriesName" class="control-label"></label>
                <input asp-for="CategoriesName" class="form-control" />
                <span asp-validation-for="CategoriesName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriesDescription" class="control-label"></label>
                <input asp-for="CategoriesDescription" class="form-control" />
                <span asp-validation-for="CategoriesDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="creation_date" class="control-label"></label>
                <input asp-for="creation_date" class="form-control" />
                <span asp-validation-for="creation_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
